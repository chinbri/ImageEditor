<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:id="@+id/ivColorOne"
            android:layout_width="30dp" android:layout_height="30dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:id="@+id/ivColorTwo"
            android:layout_width="30dp" android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ivColorOne"
            app:layout_constraintStart_toStartOf="@id/ivColorOne"/>

    <ImageView
            android:id="@+id/ivColorThree"
            android:layout_width="30dp" android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/ivColorTwo"
            app:layout_constraintStart_toStartOf="@id/ivColorOne"/>

</androidx.constraintlayout.widget.ConstraintLayout>